<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/minimal")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="bg-1">
    
    <div class="mm-page">
        <div id="wrap">
            <div class="row">
                @Html.Partial("_NavBarPartial")

                @if (ViewBag.Large != null && ViewBag.Large)
                {
                    <div id="content" class="col-md-12" tabindex="5001" style="overflow: hidden; outline: none; padding-left: 265px;">
                        @RenderBody()
                    </div>
                }
                else
                {
                    <div class="small-form">
                        @RenderBody()
                    </div>
                }
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/minimal")

    <script type="text/javascript">
    $('.menu li').each(function () {
        $(this).removeClass('active');
    });

    $('#@ViewBag.Current').addClass('active');
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
