@model LBCAlerterWeb.Models.ResetPasswordConfirmModel
@{
    ViewBag.Title = "Réinitialiser votre mot de passe";
}

@using (Html.BeginForm("ResetPasswordConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Merci de fournir votre nouveau mot de passe.</h4>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Token)
   
    @Html.PasswordFor(m => m.NewPassword, new { @placeholder = @Html.DisplayNameFor(m => m.NewPassword), @required = "required" })
    @Html.ValidationMessageFor(m => m.NewPassword)
    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword), @required = "required" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <input type="submit" class="btn btn-primary btn-block btn-large" value="Réinitialiser" />

    <div class="links">
        @Html.ActionLink("Retour à l'accueil", "Index", "Search")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}