@model LBCAlerterWeb.Models.LoginViewModel
@{
    ViewBag.Title = "Welcome !";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.TextBoxFor(m => m.Email, new { @placeholder = @Html.DisplayNameFor(m => m.Email), @required = "required" })
    @Html.ValidationMessageFor(m => m.Email)

    @Html.PasswordFor(m => m.Password, new { @placeholder = @Html.DisplayNameFor(m => m.Password), @required = "required" })
    @Html.ValidationMessageFor(m => m.Password)

    <div class="label-cb">
        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "ios-toggle grey-cb" })
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox-label", @dataon = "oui", @dataoff = "non" })
        @Html.Label("Se souvenir de moi ?")
    </div>
    
    <input type="submit" value="Connexion" class="btn btn-primary btn-block btn-large" />

    <div class="links">
        @Html.ActionLink("Mot de passe oublié ?", "ResetPassword")<br />
        @Html.ActionLink("Enregistrez-vous", "Register") si vous n'avez pas de compte.
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
