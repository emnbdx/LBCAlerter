@model LBCAlerterWeb.Models.ManageUserViewModel

<p class="text-info">
    Vous n’avez pas de nom d’utilisateur/mot de passe local pour ce site. Ajoutez un compte
    local pour pouvoir vous connecter sans nom de connexion externe.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Créer une connexion locale</h4>
    <hr />
    @Html.ValidationSummary(true)
    
    @Html.PasswordFor(m => m.NewPassword, new { @placeholder = @Html.DisplayNameFor(m => m.NewPassword), @required = "required" })
    @Html.ValidationMessageFor(m => m.NewPassword)
    
    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword), @required = "required" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <input type="submit" value="Définir le mot de passe" class="btn btn-primary btn-block btn-large" />

    <div class="links">
        @Html.ActionLink("Retour à la liste", "Index", "Search")
    </div>
}
