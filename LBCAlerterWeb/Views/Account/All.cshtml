@model IEnumerable<LBCAlerterWeb.Models.ApplicationUser>

@{
    ViewBag.Title = "Liste de tous les utilisateurs";
}

<!-- page header -->
<div class="pageheader">
    <h2>
        <i class="fa fa-users"></i> Liste de tous les utilisateurs
        <span>// @Model.Count()</span>
    </h2>
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li>You are here</li>
            <li><a href="index.html">Minimal</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </div>
</div>
<!-- /page header -->

<table class="table">
    <tr>
        <th>
            Login
        </th>
        <th>
            Type
        </th>
        <th>
            Date
        </th>
        <th>
            Activé ?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roles.FirstOrDefault().RoleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEmailVerified)
        </td>
    </tr>
}

</table>

@section Scripts {
    <script type="text/javascript">
        $('.menu li').each(function() {
            $(this).removeClass('active');
        });

        $('#user').addClass('active');
    </script>
}