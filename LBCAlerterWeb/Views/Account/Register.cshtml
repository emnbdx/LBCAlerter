@model LBCAlerterWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "S’inscrire";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Créer un nouveau compte.</h4>
    <hr />
    @Html.ValidationSummary(true)
    
    @Html.TextBoxFor(m => m.Email, new { @placeholder = @Html.DisplayNameFor(m => m.Email), @required = "required" })
    @Html.ValidationMessageFor(m => m.Email)
    @Html.PasswordFor(m => m.Password, new { @placeholder = @Html.DisplayNameFor(m => m.Password), @required = "required" })
    @Html.ValidationMessageFor(m => m.Password)
    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword), @required = "required" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <input type="submit" class="btn btn-primary btn-lg" value="S'enregistrer" />

    <div class="links">
        @Html.ActionLink("Retour à l'accueil", "Index", "Search")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
