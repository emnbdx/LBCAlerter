@model LBCAlerterWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "S’inscrire";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Créer un nouveau compte.</h4>
    <hr />
    @Html.ValidationSummary(true)
    
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @required = "required" })
    @Html.ValidationMessageFor(m => m.Email)
    @Html.PasswordFor(m => m.Password, new { @class = "col-md-2 control-label", @placeholder = "Mot de passe", @required = "required" })
    @Html.ValidationMessageFor(m => m.Password)
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", @placeholder = "Confirmation du mot de passe", @required = "required" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)
    
    <input type="submit" class="btn btn-primary btn-block btn-large" value="S'enregistrer" />

    <div class="links">
        @Html.ActionLink("Retour à l'accueil", "Index", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
