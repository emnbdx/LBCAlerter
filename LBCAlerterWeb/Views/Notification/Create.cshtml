@model LBCAlerterWeb.Models.Notification
@{
    ViewBag.Title = "Ajout d'une notification";
    ViewBag.Current = "notification";
}

@using (Html.BeginForm())
{
    <h4>Ajout d'une notification</h4>
    <hr />
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.TextBoxFor(model => model.Title, new { @placeholder = @Html.DisplayNameFor(model => model.Title), @required = "required" })
    @Html.ValidationMessageFor(model => model.Title)

    @Html.TextAreaFor(model => model.Message, new { @placeholder = @Html.DisplayNameFor(model => model.Message), @required = "required" })
    @Html.ValidationMessageFor(model => model.Message)
    
    @Html.TextBoxFor(model => model.Date, new { @placeholder = @Html.DisplayNameFor(model => model.Date), @required = "required", @class = "datepicker" })
    @Html.ValidationMessageFor(model => model.Message)

    <div class="onoffswitch-container">
        @Html.Label("Important ?", new { @class = "control-label" })
        <div class="col-xs-4 control-block">
            <div class="onoffswitch labeled primary">
                @Html.CheckBoxFor(m => m.Important, new { @class = "onoffswitch-checkbox" })
                <label class="onoffswitch-label" for="Important">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="onoffswitch-container">
        @Html.Label("Vu ?", new { @class = "control-label" })
        <div class="col-xs-4 control-block">
            <div class="onoffswitch labeled primary">
                @Html.CheckBoxFor(m => m.Viewed, new { @class = "onoffswitch-checkbox" })
                <label class="onoffswitch-label" for="Viewed">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />

    <div class="links">
        @Html.ActionLink("Retour à la liste", "All")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            weekStart: 1
        });
    </script>
}
