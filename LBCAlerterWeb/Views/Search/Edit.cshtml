@model LBCAlerterWeb.Models.Search
@{
    ViewBag.Title = "Editer";
}

@using (Html.BeginForm())
{
    <h4>Modification de l'alerte</h4>
    <hr />

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CreationDate)
    @Html.HiddenFor(model => model.Url)
    @Html.HiddenFor(model => model.LastRecap)


    @Html.EditorFor(model => model.KeyWord, new { @placeholder = @Html.DisplayNameFor(model => model.KeyWord), @required = "required" })
    @Html.ValidationMessageFor(model => model.KeyWord)

    <div class="label-cb">
        @Html.CheckBoxFor(m => m.MailAlert, new { @class = "ios-toggle grey-cb" })
        @Html.LabelFor(m => m.MailAlert, new { @class = "checkbox-label", @dataon = "oui", @dataoff = "non" })
        @Html.Label("", "Alertes email ?")
    </div>

    <div class="label-cb">
        @Html.CheckBoxFor(m => m.MailRecap, new { @class = "ios-toggle grey-cb" })
        @Html.LabelFor(m => m.MailRecap, new { @class = "checkbox-label", @dataon = "oui", @dataoff = "non" })
        @Html.Label("", "Récap. email ?")
    </div>

    @Html.EditorFor(model => model.RefreshTime, new { @placeholder = @Html.DisplayNameFor(model => model.RefreshTime), @required = "required" })
    @Html.ValidationMessageFor(model => model.RefreshTime)
    
    @Html.LabelFor(model => model.Url, new { @class = "control-label col-md-2" })
    @Html.DisplayFor(model => model.Url)

    <input type="submit" value="Sauvegarder" class="btn btn-primary btn-block btn-large" />

    <div class="links">
        @Html.ActionLink("Retour à la liste", "Index")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
